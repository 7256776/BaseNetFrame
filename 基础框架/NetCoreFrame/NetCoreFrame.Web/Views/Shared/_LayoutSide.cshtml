@using Abp.Timing
@using Abp.Web.Security.AntiForgery
@inject IAbpAntiForgeryManager AbpAntiForgeryManager
@{
    AbpAntiForgeryManager.SetCookie(Context);
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->

<head>
    <meta charset="utf-8" />
    <title>@InitProjectName()</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    @* ◢◢◢◢◢基础组件及框架样式 ◣◣◣◣◣ *@
    <!-- 统一google字体库(采用CDN方式) -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <!-- fontAwesome 字体图标库 -->
    <link href="~/Content/Lib/fontAwesome/css/font-awesome-min.css" rel="stylesheet" type="text/css" />
    <!-- bootstrap基础样式 -->
    <link href="~/Content/Lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @* ◢◢◢◢◢主题样式◣◣◣◣◣ *@
    <!--圆角与直角样式-->
    <link href="~/Content/assets/global/css/components-rounded.min.css" rel="stylesheet" id="style_components" type="text/css" />
    <link href="~/Content/assets/global/css/plugins.min.css" rel="stylesheet" />
    <link href="~/Content/assets/layouts/layout4/css/layout.min.css" rel="stylesheet" type="text/css" />
    <!--错误页面样式-->
    <link href="~/Content/assets/pages/css/error.min.css" rel="stylesheet" />
    <!-- 用户设置页面样式 -->
    <link href="~/Content/assets/pages/css/profile.min.css" rel="stylesheet" />
    <!-- 用户收件箱样式 -->
    <link href="~/Content/assets/apps/css/inbox.css" rel="stylesheet" />
    <!-- 通知设置页面样式 -->
    <link href="~/Content/assets/apps/css/todo-2.min.css" rel="stylesheet" />
    <!-- 框架css  -->
    <link href="~/Content/frameCore/css/frameCommon.css" rel="stylesheet" />
    <!--整体页面的布局样式-->
    <link href="~/Content/assets/layouts/layout4/css/themes/light.min.css" rel="stylesheet" id="style_color" />

    @* ◢◢◢◢◢基础组件及框架Js ◣◣◣◣◣ *@
    <!-- babel-polyfill  min 实现对ES6 API的支持 -->
    <script src="~/Content/Lib/vue/polyfill.js"></script>
    <!-- jquery主框架 2.2.3.min -->
    <script src="~/Content/Lib/jQuery/jquery.js"></script>
    <script src="~/Content/Lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/Lib/cookieJs/js.cookie.min.js"></script>
    <!-- jquer mini滚动条 -->
    <script src="~/Content/Lib/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- bootstrap 选择与按钮下拉组件  (如果取消该js下拉菜单需要手动点击展开)-->
    @*<script src="/Content/Lib/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>*@
    <!-- 处理日期格式化 -->
    <script src="~/Content/Lib/moment/moment-with-locales.min.js"></script>

    @* ◢◢◢◢◢ Vue框架 + Vue路由 ◣◣◣◣◣ *@
    <script src="~/Content/Lib/vue/vue.js"></script>
    <script src="~/Content/Lib/vue/vue-router.js"></script>

    @* ◢◢◢◢◢ ElementUI ◣◣◣◣◣ *@
    <link href="~/Content/Lib/ElementUI/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Content/Lib/ElementUI/index.js"></script>

    @* ◢◢◢◢◢ 主题设置及菜单Js ◣◣◣◣◣ *@
    <script src="~/Content/assets/global/scripts/app.js"></script>
    <script src="~/Content/assets/layouts/layout4/scripts/layout.js"></script>
    <script src="~/Content/assets/layouts/layout4/scripts/frameStyle.js"></script>
    @*<script src="~/Content/assets/layouts/layout4/scripts/frameStyle.min.js"></script>*@
    <!-- 右侧快捷菜单栏 -->
    @*<script src="~/Content/assets/layouts/global/scripts/quick-sidebar.min.js"></script>*@
    <script src="~/Content/assets/layouts/global/scripts/quick-sidebar.js"></script>

    @* ◢◢◢◢◢ AbpJs API ◣◣◣◣◣ *@
    <script src="~/Abp/Framework/scripts/abp.js"></script>
    <script src="~/Abp/Framework/scripts/libs/abp.jquery.js"></script>

    <!--Abp授权-->
    <script src="~/AbpScripts/GetScripts?v=@(Clock.Now.Ticks)" type="text/javascript"></script>
    <!--Abp动态api  暂时注释 该方法可以提供动态生成的webap的js访问i函数 但是必须控制webapi服务仅包含一个对象参数-->
    @*<script src="/api/AbpServiceProxies/GetAll" type="text/javascript"></script>*@

    <!--引用SignalR自动生成的脚本 -->
    <script src="~/Content/Lib/signalr-client/signalr.min.js" asp-append-version="true"></script>
    <script src="~/Content/Lib/signalr-client/signalr.js"></script>

    <script src="~/Abp/Framework/scripts/libs/abp.signalr-client.js" asp-append-version="true"></script>

    @* ◢◢◢◢◢ jurassuc框架 js ◣◣◣◣◣ *@
    <script src="~/Content/frameCore/scripts/frameCore.js"></script>
    <script src="~/Content/frameCore/scripts/frameGlobal.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="~/Content/Lib/html5shiv/3.7.3/html5shiv.js"></script>
        <script src="~/Content/Lib/respond/1.4.2/respond.min.js"></script>
        <script src="~/Content/Lib/excanvas/excanvas.min.js"></script>
    <![endif]-->

    <script type="text/javascript">
        //这是用于获取javascript应用程序的根路径.
        var abp = abp || {}; abp.appPath = '@ApplicationPath';
    </script>

    <link rel="shortcut icon" href="~/Content/frameCore/img/favicon.ico" />
    <!--设置自定义css与js文件-->
    @WebResourceManager.RenderTopScripts()
    @WebResourceManager.RenderStyles()

</head>
@*添加 page-full-width 主内容区域全屏撑满不显示菜单栏)*@
<body class="page-container-bg-solid page-header-fixed page-sidebar-fixed page-footer-fixed page-sidebar-closed-hide-logo ">
    <div id="app" class="layoutBody">

        <!-- 顶部 -->
        <div class="page-header navbar navbar-fixed-top">
            <div class="page-header-inner">
                <!-- LOGO区域 -->
                <div class="page-logo">
                    <div class="frame-logo-page frame-logo-light">
                        <div class="frame-logo-page-title">
                            <webtitle class="frame-logo-title frame-logo-title-drak">
                                <!--网站标题-->
                            </webtitle>
                        </div>
                        @*通过样式取代  class="frame-logo-page"*@
                    </div>
                    <div class="menu-toggler sidebar-toggler">
                        &nbsp;&nbsp;<!-- 显示菜单开关按钮 -->
                    </div>
                </div>
                <!-- LOGO区域 -->

                <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                    <!-- 响应布局情况下出现的菜单开关按钮 -->
                </a>

                <!-- 动作消息提示按钮 区域  -->
                <div class="page-actions ">
                    <headtoolbutton v-show="frameTopLayout.headToolButton"></headtoolbutton>
                </div>
                <!-- 动作消息提示按钮 区域 -->
                <!-- TOP 页面 区域 -->
                <div class="page-top">
                    <!-- 搜索框按钮 区域 -->
                    <searchform class="search-form search-form-expanded">
                        <searchdropdown slot-scope="scope" v-bind:search-Callback="scope.callbackFn"></searchdropdown>
                    </searchform>
                    <!-- 搜索框按钮 区域 -->
                    <!-- Top 功能菜单 区域 -->
                    <div class="top-menu">
                        <toptoolsmenu></toptoolsmenu>
                    </div>
                    <!-- Top 功能菜单 区域 -->
                </div>
                <!-- TOP 页面 区域 -->
            </div>
        </div>
        <!-- 顶部 -->
        <div class="clearfix"> </div>
        <!-- 中部开始 -->
        <div class="page-container">
            <!-- 左侧边栏 菜单 -->
            <div class="page-sidebar-wrapper">
                <div class="page-sidebar navbar-collapse collapse">
                    <sidemenu v-bind:menusdata="menusData"></sidemenu>
                </div>
            </div>
            <!-- 左侧边栏 菜单 -->
            <!-- 中部主内容区域 -->
            <div class="page-content-wrapper">
                <div class="page-content page-content-ext">
                    <!-- 页头-->
                    <div class="page-head">
                        <div class="page-title">
                            <el-breadcrumb separator-class="el-icon-arrow-right" replace>
                                <el-breadcrumb-item v-bind:to="{ path: '/Views/J_Home/DesktopPage' }">首页</el-breadcrumb-item>
                                <el-breadcrumb-item v-for="(item, index) in breadcrumbMenu" v-bind:key="index">
                                    <router-link v-bind:to="item.url" href="javascript:;" style="cursor:pointer;">
                                        {{item.displayName}}
                                    </router-link>
                                </el-breadcrumb-item>
                            </el-breadcrumb>
                        </div>
                        <!-- 主题设置工具栏及设置菜单面板 -->
                        <div class="page-toolbar">
                            <div class="btn-group btn-theme-panel">
                                <a href="javascript:;" class="btn dropdown-toggle1" data-toggle="dropdown">
                                    <i class="fa fa-cog fa-4x"></i>
                                </a>
                                <div class="dropdown-menu theme-panel pull-right dropdown-custom hold-on-click">
                                    <div class="row">
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <h3>主题颜色</h3>
                                            <ul class="theme-colors">
                                                <li class="theme-color theme-color-default " data-theme="drak">
                                                    <span class="theme-color-view"></span>
                                                    <span class="theme-color-name">Dark Header</span>
                                                </li>
                                                <li class="theme-color theme-color-light active" data-theme="light">
                                                    <span class="theme-color-view"></span>
                                                    <span class="theme-color-name">Light Header</span>
                                                </li>
                                            </ul>
                                            <input type="hidden" id="hdFrameColor" value="light" />
                                        </div>
                                        <div class="col-md-8 col-sm-8 col-xs-12 seperator">
                                            <h3>布局</h3>
                                            <ul class="theme-settings">
                                                <li>
                                                    页面风格
                                                    <select class="layout-style-option form-control input-small input-sm">
                                                        <option value="square">直角</option>
                                                        <option value="rounded" selected="selected">圆角</option>
                                                    </select>
                                                </li>
                                                <li>
                                                    框架布局
                                                    <select class="layout-option form-control input-small input-sm tooltips" data-original-title="流布局&框布局" data-container="body" data-placement="top">
                                                        <option value="fluid" selected="selected">流布局</option>
                                                        <option value="boxed">框布局</option>
                                                    </select>
                                                </li>
                                                <li>
                                                    固定菜单栏
                                                    <select class="sidebar-option form-control input-small input-sm">
                                                        <option value="fixed" selected="selected">固定</option>
                                                        <option value="default">默认</option>
                                                    </select>
                                                </li>
                                                <li>
                                                    固定顶部页面
                                                    <select class="page-header-option form-control input-small input-sm">
                                                        <option value="fixed" selected="selected">固定</option>
                                                        <option value="default">默认</option>
                                                    </select>
                                                </li>
                                                <li>
                                                    固定底部布局
                                                    <select class="page-footer-option form-control input-small input-sm">
                                                        <option value="fixed">固定</option>
                                                        <option value="default" selected="selected">默认</option>
                                                    </select>
                                                </li>
                                                <li>
                                                    菜单栏位置
                                                    <select class="sidebar-pos-option form-control input-small input-sm">
                                                        <option value="left" selected="selected">左</option>
                                                        <option value="right">右</option>
                                                    </select>
                                                </li>
                                                <li>
                                                    菜单模式
                                                    <select class="sidebar-menu-option form-control input-small input-sm">
                                                        <option value="accordion" selected="selected">折叠</option>
                                                        <option value="hover">悬停</option>
                                                    </select>
                                                </li>
                                                <li>
                                                    消息框背景颜色
                                                    <select class="page-header-top-dropdown-style-option form-control input-small input-sm">
                                                        <option value="light" selected="selected">白色</option>
                                                        <option value="dark">黑色</option>
                                                    </select>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- 主题设置工具栏及设置菜单面板 -->
                    </div>
                    <!-- 页头-->
                    <template>
                        @RenderBody()
                    </template>
                </div>
            </div>
            <!-- 中部主内容区域 -->
            <!-- 右侧边栏 -->
            <quicksidebar></quicksidebar>
            <!-- 右侧边栏 -->
        </div>
        <!-- 中部结束 -->
        <!-- 底部状态栏开始 -->
        <div class="page-footer page-footer-ext">
            <div class="page-footer-inner">
                @*2018 &copy;*@ @GetSettingValue("CompanyName")
                <el-tooltip content="@GetSettingValue("CompanyName")" placement="top">
                    <a href="#" title="@GetSettingValue("CompanyName")" target="_blank">@GetSettingValue("CompanyWWW")</a>
                </el-tooltip>
            </div>
            <div class="scroll-to-top">
                @*<i class="icon-arrow-up"></i>*@
                <span class="fa fa-arrow-circle-o-up fa-3x"></span>
            </div>
        </div>
        <!--自定义容器用于注入自定义的组件-->
        <initpage><!--自定义容器用于注入自定义的组件--></initpage>
    </div>
    @*<div id="mount-point"></div>*@
    @WebResourceManager.RenderBottomScripts()

    <script src="~/Content/frameCore/scripts/framePageStart.js"></script>
    <script src="/Content/Lib/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
</body>
</html>
