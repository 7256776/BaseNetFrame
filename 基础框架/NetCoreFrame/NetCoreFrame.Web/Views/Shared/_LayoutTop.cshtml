@using Abp.Timing
@using Abp.Web.Security.AntiForgery
@inject IAbpAntiForgeryManager AbpAntiForgeryManager
@{
    AbpAntiForgeryManager.SetCookie(Context);
}
<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="zh">
<!--<![endif]-->

<head>
    <meta charset="utf-8" />
    <title>@InitProjectName()</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    @* ◢◢◢◢◢基础组件及框架样式 ◣◣◣◣◣ *@
    <!-- 统一google字体库(采用CDN方式) -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <!-- fontAwesome 字体图标库 -->
    <link href="~/Content/Lib/fontAwesome/css/font-awesome-min.css" rel="stylesheet" type="text/css" />
    <!-- bootstrap基础样式 -->
    <link href="~/Content/Lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @* ◢◢◢◢◢主题样式◣◣◣◣◣ *@
    <!--圆角与直角样式-->
    @*<link href="~/Content/assets/global/css/components.min.css" rel="stylesheet" />*@
    <link href="~/Content/assets/global/css/components-rounded.min.css" rel="stylesheet" id="style_components" type="text/css" />
    <link href="~/Content/assets/global/css/plugins.min.css" rel="stylesheet" />
    <link href="~/Content/assets/layouts/layout3/css/layout.min.css" rel="stylesheet" />
    <!--错误页面样式-->
    <link href="~/Content/assets/pages/css/error.min.css" rel="stylesheet" />
    <!-- 用户设置页面样式 -->
    <link href="~/Content/assets/pages/css/profile.min.css" rel="stylesheet" />
    <!-- 用户收件箱样式 -->
    <link href="~/Content/assets/apps/css/inbox.css" rel="stylesheet" />
    <!-- 通知设置页面样式 -->
    <link href="~/Content/assets/apps/css/todo-2.min.css" rel="stylesheet" />
    <!-- jurassuc框架css  -->
    <link href="~/Content/frameCore/css/frameCommon.css" rel="stylesheet" />
    <!--整体页面的布局样式-->
    <link href="~/Content/assets/layouts/layout3/css/themes/light.min.css" rel="stylesheet" id="style_color" />
    @* ◢◢◢◢◢基础组件及框架Js ◣◣◣◣◣ *@
    <!-- babel-polyfill  min 实现对ES6 API的支持 -->
    <script src="~/Content/Lib/vue/polyfill.js"></script>
    <!-- jquery主框架 2.2.3.min -->
    <script src="~/Content/Lib/jQuery/jquery.js"></script>
    <script src="~/Content/Lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/Lib/cookieJs/js.cookie.min.js"></script>
    <!-- jquer mini滚动条 -->
    <script src="~/Content/Lib/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- jquer表单组件 -->
    <!-- bootstrap 选择与按钮下拉组件 (如果取消该js下拉菜单需要手动点击展开)-->
    @*<script src="/Content/Lib/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>*@
    <!-- 处理日期格式化 -->
    <script src="~/Content/Lib/moment/moment-with-locales.min.js"></script>

    @* ◢◢◢◢◢ Vue框架 + Vue路由 ◣◣◣◣◣ *@
    <script src="~/Content/Lib/vue/vue.js"></script>
    <script src="~/Content/Lib/vue/vue-router.js"></script>

    @* ◢◢◢◢◢ ElementUI ◣◣◣◣◣ *@
    <link href="~/Content/Lib/ElementUI/theme-Chalk/index.css" rel="stylesheet" />
    <script src="~/Content/Lib/ElementUI/index.js"></script>

    @* ◢◢◢◢◢ 主题设置及菜单Js ◣◣◣◣◣ *@
    <script src="~/Content/assets/global/scripts/app.js"></script>
    <script src="~/Content/assets/layouts/layout3/scripts/layout.js"></script>
    <script src="~/Content/assets/layouts/layout3/scripts/frameStyle.min.js"></script>
    <!-- 右侧快捷菜单栏 -->
    <script src="~/Content/assets/layouts/global/scripts/quick-sidebar.min.js"></script>
    @*<script src="~/Content/assets/layouts/global/scripts/quick-sidebar.js"></script>*@

    @* ◢◢◢◢◢ AbpJs API ◣◣◣◣◣ *@
    <script src="~/Abp/Framework/scripts/abp.js"></script>
    <script src="~/Abp/Framework/scripts/libs/abp.jquery.js"></script>
    <!--Abp授权-->
    <script src="~/AbpScripts/GetScripts?v=@(Clock.Now.Ticks)" type="text/javascript"></script>

    <!--引用SignalR自动生成的脚本 -->
    <script src="~/Content/Lib/signalr-client/signalr.min.js" asp-append-version="true"></script>
    <script src="~/Abp/Framework/scripts/libs/abp.signalr-client.js" asp-append-version="true"></script>

    @* ◢◢◢◢◢ jurassuc框架核心库 ◣◣◣◣◣ *@
    <script src="~/Content/frameCore/scripts/frameCore.js"></script>
    <script src="~/Content/frameCore/scripts/frameGlobal.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="~/Content/Lib/html5shiv/3.7.3/html5shiv.js"></script>
        <script src="~/Content/Lib/respond/1.4.2/respond.js"></script>
        <script src="~/Content/Lib/excanvas/excanvas.min.js"></script>
    <![endif]-->

    <script type="text/javascript">
        //This is used to get the application's root path from javascript. It's useful if you're running application in a virtual directory under IIS.
        var abp = abp || {}; abp.appPath = '@ApplicationPath';
    </script>

    <link rel="shortcut icon" href="~/Content/frameCore/img/favicon.ico" />
    <!--设置自定义css与js文件-->
    @WebResourceManager.RenderTopScripts()
    @WebResourceManager.RenderStyles()

</head>

<body class="page-container-bg-solid page-boxed">
    <div id="app" class="layoutBody">
        <!-- 顶部内容 -->
        <div class="page-header ">
            <!-- 顶部 -->
            <div class="page-header-top">
                <div class="container">
                    <!-- LOGO区域 -->
                    <div class="page-logo">
                        <div class="frame-logo-page frame-logo-light ">
                            <div class="frame-logo-page-title">
                                <webtitle class="frame-logo-title frame-logo-title-dark">
                                    <!--网站标题-->
                                </webtitle>
                            </div>
                            @*通过样式取代*@
                        </div>
                    </div>
                    <!-- LOGO区域 -->
                    <a href="javascript:;" class="menu-toggler">
                        <!-- 响应布局情况下出现的菜单开关按钮 -->
                    </a>

                    <!-- Top 功能菜单 区域 -->
                    <div class="top-menu">
                        <toptoolsmenu></toptoolsmenu>
                    </div>
                    <!-- Top 功能菜单 区域 -->
                    <!-- 搜索框 -->
                    <searchform class="search-form search-form-expanded">
                        <searchdropdown slot-scope="scope" v-bind:search-Callback="scope.callbackFn"></searchdropdown>
                    </searchform>
                </div>
            </div>
            <!-- 顶部 -->
            <!-- 顶部菜单 -->
            <div class="page-header-menu">
                <div class="container">
                    <!-- BEGIN MEGA MENU -->
                    <!-- 添加class  "hor-menu-light" 到class  "hor-menu" 后面改变菜单背景颜色 -->
                    <div class="hor-menu  hor-menu-light">
                        <!-- tile = 平铺     folding = 折叠 -->
                        <topmenu v-bind:menusdata="menusData"
                                 v-bind:menu-Type="this.frameTopLayout.layoutMenusType"
                                 v-bind:menus-Col="this.frameTopLayout.menusCol"
                                 v-bind:is-Menus-Col-Full="this.frameTopLayout.menusColFull">
                        </topmenu>
                    </div>
                    <!-- END MEGA MENU -->
                </div>
            </div>
            <!-- 顶部菜单 -->
        </div>
        <!-- 顶部内容 -->
        <div class="clearfix"> </div>
        <!-- 中部主内容区域 -->
        <div class="page-container">
            <div class="page-content-wrapper">
                <div class="page-head">
                    <div class="container">
                        <div class="page-title">
                            <el-breadcrumb separator-class="el-icon-arrow-right" replace>
                                <el-breadcrumb-item v-bind:to="{ path: '/Views/SysHome/DesktopPage' }">首页</el-breadcrumb-item>
                                <el-breadcrumb-item v-for="(item, index) in breadcrumbMenu" v-bind:key="index">
                                    <router-link v-bind:to="item.url" href="javascript:;" style="cursor:pointer;">
                                        {{item.displayName}}
                                    </router-link>
                                </el-breadcrumb-item>
                            </el-breadcrumb>
                        </div>
                        <div class="page-toolbar">
                            <div class="btn-group btn-theme-panel">
                                <a href="javascript:;" class="btn dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-cog fa-4x"></i>
                                </a>
                                <div class="dropdown-menu theme-panel pull-right dropdown-custom hold-on-click" style="min-width:576px;">
                                    <div class="row">
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <h3>主题颜色</h3>
                                            <ul class="theme-colors">
                                                <li class="theme-color theme-color-blue-hoki" data-theme="drak">
                                                    <span class="theme-color-view"></span>
                                                    <span class="theme-color-name">Dark Header</span>
                                                </li>
                                                <li class="theme-color theme-color-light" data-theme="light">
                                                    <span class="theme-color-view"></span>
                                                    <span class="theme-color-name">Light Header</span>
                                                </li>
                                            </ul>
                                            <input type="hidden" id="hdFrameColor" value="light" />
                                        </div>
                                        <div class="col-md-8 col-sm-8 col-xs-12 seperator">
                                            <h3>布局</h3>
                                            <ul class="theme-settings">
                                                <li>
                                                    页面风格
                                                    <select class="theme-setting theme-setting-style form-control input-sm input-small input-inline " data-container="body">
                                                        <option value="boxed" selected="selected">直角</option>
                                                        <option value="rounded">圆角</option>
                                                    </select>
                                                </li>
                                                <li>
                                                    框架布局
                                                    <select class="theme-setting theme-setting-layout form-control input-sm input-small input-inline " data-container="body">
                                                        <option value="boxed" selected="selected">框布局</option>
                                                        <option value="fluid">流布局</option>
                                                    </select>
                                                </li>
                                                <li>
                                                    固定顶部页面
                                                    <select class="theme-setting theme-setting-top-menu-mode form-control input-sm input-small input-inline " data-container="body">
                                                        <option value="fixed">固定</option>
                                                        <option value="not-fixed" selected="selected">默认</option>
                                                    </select>
                                                </li>
                                                <li>
                                                    固定顶部菜单
                                                    <select class="theme-setting theme-setting-mega-menu-mode form-control input-sm input-small input-inline " data-container="body">
                                                        <option value="fixed" selected="selected">固定</option>
                                                        <option value="not-fixed">默认</option>
                                                    </select>
                                                </li>
                                                <li>
                                                    消息框背景颜色
                                                    <select class="theme-setting theme-setting-top-menu-style form-control input-sm input-small input-inline " data-container="body">
                                                        <option value="dark">黑色</option>
                                                        <option value="light" selected="selected">白色</option>
                                                    </select>
                                                </li>
                                                <li>
                                                    菜单背景色
                                                    <select class="theme-setting theme-setting-mega-menu-style form-control input-sm input-small input-inline " data-container="body">
                                                        <option value="dark" selected="selected">黑色</option>
                                                        <option value="light">白色</option>
                                                    </select>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="page-content">
                    <div class="container">
                        @*<div id="cdiv" class="page-content-inner">
                            @RenderBody()
                        </div>*@
                        <template>
                            @RenderBody()
                        </template>
                    </div>
                </div>
            </div>
            <!-- 中部主内容区域 -->
            <!-- 右侧边栏 -->
            <quicksidebar></quicksidebar>
            <!-- 右侧边栏 -->
        </div>
        <!-- 中部结束 -->
        <!--网站地图页脚预留区域 暂时注释-->
        @*<div class="page-prefooter"></div>*@

        <div class="page-footer">
            <div class="container">
                2018 &copy; @GetSettingValue("CompanyName").
                <a href="#" title="@GetSettingValue("CompanyName")" target="_blank">@GetSettingValue("CompanyWWW")</a>
            </div>
        </div>
        <div class="scroll-to-top">
            <span class="fa fa-arrow-circle-o-up fa-3x"></span>
        </div>
        <!--自定义容器用于注入自定义的组件-->
        <initpage><!--自定义容器用于注入自定义的组件--></initpage>
    </div>
    @WebResourceManager.RenderBottomScripts()
    <script src="~/Content/frameCore/scripts/framePageStart.js"></script>
    <script src="/Content/Lib/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
</body>
</html>
